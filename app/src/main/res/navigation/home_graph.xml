<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/membershipFragment"
        android:name="com.ajou.helptmanager.home.view.fragment.MembershipFragment"
        android:label="fragment_membership"
        tools:layout="@layout/fragment_membership" >
        <action
            android:id="@+id/action_membershipFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_membershipFragment_to_equipmentListFragment"
            app:destination="@id/equipmentListFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ajou.helptmanager.home.view.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_membershipFragment"
            app:destination="@id/membershipFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchUserFragment"
            app:destination="@id/searchUserFragment" />
        <action
            android:id="@+id/action_homeFragment_to_equipmentListFragment"
            app:destination="@id/equipmentListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_noticeFragment"
            app:destination="@id/noticeFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchUserFragment"
        android:name="com.ajou.helptmanager.home.view.fragment.SearchUserFragment"
        android:label="fragment_search_user"
        tools:layout="@layout/fragment_search_user" >
        <action
            android:id="@+id/action_searchUserFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_searchUserFragment_to_addUserFragment"
            app:destination="@id/addUserFragment" />
        <action
            android:id="@+id/action_searchUserFragment_to_equipmentListFragment"
            app:destination="@id/equipmentListFragment" />
        <action
            android:id="@+id/action_searchUserFragment_self"
            app:destination="@id/searchUserFragment" />
        <action
            android:id="@+id/action_searchUserFragment_to_membershipFragment"
            app:destination="@id/membershipFragment" />
        <action
            android:id="@+id/action_searchUserFragment_to_memberDetailFragment"
            app:destination="@id/memberDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/addUserFragment"
        android:name="com.ajou.helptmanager.home.view.fragment.AddUserFragment"
        android:label="fragment_add_user"
        tools:layout="@layout/fragment_add_user" >
        <action
            android:id="@+id/action_addUserFragment_to_searchUserFragment"
            app:destination="@id/searchUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/equipmentListFragment"
        android:name="com.ajou.helptmanager.home.view.fragment.EquipmentListFragment"
        android:label="fragment_equipment_list"
        tools:layout="@layout/fragment_equipment_list" >
        <action
            android:id="@+id/action_equipmentListFragment_to_searchUserFragment"
            app:destination="@id/searchUserFragment" />
        <action
            android:id="@+id/action_equipmentListFragment_to_membershipFragment"
            app:destination="@id/membershipFragment" />
        <action
            android:id="@+id/action_equipmentListFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_equipmentListFragment_self"
            app:destination="@id/equipmentListFragment" />
        <action
            android:id="@+id/action_equipmentListFragment_to_addEquipmentFragment"
            app:destination="@id/addEquipmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEquipmentFragment"
        android:name="com.ajou.helptmanager.home.view.fragment.AddEquipmentFragment"
        android:label="fragment_add_equipment"
        tools:layout="@layout/fragment_add_equipment" />

    <fragment
        android:id="@+id/memberDetailFragment"
        android:name="com.ajou.helptmanager.memberDetail.MemberDetailFragment"
        android:label="fragment_member_detail"
        tools:layout="@layout/fragment_member_detail">
        <action
            android:id="@+id/action_memberDetailFragment_to_memberDetailExerciseRecordFragment"
            app:destination="@id/memberDetailExerciseRecordFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/memberDetailExerciseRecordFragment"
        android:name="com.ajou.helptmanager.memberDetail.MemberDetailExerciseRecordFragment"
        android:label="fragment_member_detail_exercise_record"
        tools:layout="@layout/fragment_member_detail_exercise_record" />
    <fragment
        android:id="@+id/noticeFragment"
        android:name="com.ajou.helptmanager.notice.NoticeFragment"
        android:label="fragment_notice"
        tools:layout="@layout/fragment_notice"/>



</navigation>