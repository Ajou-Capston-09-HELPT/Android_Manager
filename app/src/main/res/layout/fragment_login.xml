<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.view.LoginFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/login_logo"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.33" />

      <ImageView
          android:id="@+id/nextBtn"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:background="@drawable/login_kakaobackground"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="24dp"
          app:layout_constraintVertical_bias="0.8"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/imageView3" />

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:src="@drawable/login_kakaoicon"
          app:layout_constraintBottom_toBottomOf="@+id/nextBtn"
          app:layout_constraintStart_toStartOf="@+id/nextBtn"
          app:layout_constraintTop_toTopOf="@+id/nextBtn" />


      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="카카오로 시작하기"
          android:textColor="@color/black"
          android:textSize="16sp"
          app:layout_constraintBottom_toBottomOf="@+id/nextBtn"
          app:layout_constraintEnd_toEndOf="@+id/nextBtn"
          app:layout_constraintStart_toStartOf="@+id/nextBtn"
          app:layout_constraintTop_toTopOf="@+id/nextBtn" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>