<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/titleBarMembership"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:clipToOutline="true"
        android:background="@drawable/membership_title_bar" >

        <ImageView
            android:id="@+id/membershipBackButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/membershipTitleText"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/stringMembershipTitleText"
            android:textAppearance="@style/styleMembershipPrice"
            android:lineSpacingExtra="5sp"
            android:gravity="center_horizontal|center_vertical"
            />

        <ImageView
            android:id="@+id/membershipHamburgerButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:src="@drawable/hamburger" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMembership"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/titleBarMembership"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/membershipRegisterButton"
        android:layout_width="364dp"
        android:layout_height="56dp"
        android:background="@drawable/long_button"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/membershipRegisterButtonText"
            android:layout_width="99dp"
            android:layout_height="24dp"
            android:text="@string/stringMembershipRegisterButton"
            android:gravity="center"
            android:textAppearance="@style/styleMembershipRegisterButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>