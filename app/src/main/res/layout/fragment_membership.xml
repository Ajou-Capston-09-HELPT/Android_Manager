<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/membership_background"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/titleBarMembership"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/membership_title_bar"
        android:clipToOutline="true"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewMembership"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/membershipBackButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center|start|top"
            android:layout_margin="24dp"
            android:src="@drawable/arrow"
            android:contentDescription="@string/descriptionMembershipBackButton"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="24dp" />

        <TextView
            android:id="@+id/membershipTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="5sp"
            android:text="@string/stringMembershipTitleText"
            android:textAppearance="@style/styleMembershipPrice" />

        <ImageView
            android:id="@+id/membershipHamburgerButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center|top|end"
            android:layout_margin="24dp"
            android:src="@drawable/hamburger"
            android:contentDescription="@string/descriptionMembershipHamburgerButton"
            tools:layout_editor_absoluteX="363dp"
            tools:layout_editor_absoluteY="24dp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMembership"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/titleBarMembership"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/membershipRegisterButton"
        android:layout_width="364dp"
        android:layout_height="56dp"
        android:background="@drawable/long_button"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/membershipRegisterButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringMembershipRegisterButton"
            android:gravity="center"
            android:textAppearance="@style/styleMembershipRegisterButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>