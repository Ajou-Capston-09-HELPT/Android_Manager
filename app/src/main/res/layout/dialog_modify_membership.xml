<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="388dp"
    android:layout_height="294dp"
    android:background="@drawable/register_membership_background"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerMembershipTitle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/modifyMembershipTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="5sp"
            android:text="@string/stringModifyMembershipTitle"
            android:textAppearance="@style/styleRegisterMembershipTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/btnRegisterClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/ripple_effect"
            android:src="@drawable/close"
            app:layout_constraintBottom_toBottomOf="@id/registerMembershipTitleText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/registerMembershipTitleText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerMembershipLayout"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:elevation="10dp"
        android:background="@drawable/price"

        app:layout_constraintTop_toBottomOf="@id/registerMembershipTitle"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/registerMembershipContents"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/registerMembershipName"
                android:layout_width="300dp"
                android:layout_height="29dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearRegisterMembershipTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_vertical"
                    >

                    <EditText
                        android:id="@+id/etRegisterMembershipTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/pretendard"
                        android:hint="@string/stringEtRegisterMembershipTitle"
                        android:inputType="number"
                        style="@style/styleEtRegisterMembershipTitle"

                        />
                    <TextView
                        android:id="@+id/textViewRegisterMembershipTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:fontFamily="@font/pretendard"
                        android:gravity="center"
                        android:text="@string/stringMembershipTitle"
                        android:textAppearance="@style/styleMembershipTitle"
                        android:layout_marginStart="4dp"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="@id/registerMembershipName"
                    >

                    <EditText
                        android:id="@+id/etRegisterMembershipPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/pretendard"
                        android:hint="@string/stringEtRegisterMembershipPrice"
                        android:inputType="numberDecimal"
                        style="@style/styleEtRegisterMembershipPrice"
                        />

                    <TextView
                        android:id="@+id/textViewRegisterMembershipPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="@string/stringMembershipPrice"
                        android:textAppearance="@style/styleMembershipPrice"
                        android:fontFamily="@font/pretendard"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="4dp"
                        />


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <TextView
                    android:id="@+id/tvMonthlyPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|bottom"
                    android:textAppearance="@style/styleMembershipMonthPrice"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerMembershipRegisterButton"
        android:layout_width="340dp"
        android:layout_height="56dp"
        android:background="@drawable/long_button"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/registerMembershipRegisterButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stringModifyMembershipButton"
            android:gravity="center"
            android:textAppearance="@style/styleMembershipRegisterButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>